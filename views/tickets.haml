%div{:"data-role" => "page", :"data-title" => "Virtual Theater - My Tickets"} 
  %div{:"data-role" => "header"}
    %a{:href => "/news", :"data-transition" => "pop", :"data-icon" => "home"} Home
    %h1 Virtual Theater
    - if logged_in?
      %a{:href => "/menu", :class => "ui-btn-right", :"data-rel" => "dialog", :"data-transition" => "pop", :"data-icon" => "grid"} Menu
    - else
      %a{:href => "/auth", :class => "ui-btn-right", :"data-rel" => "dialog", :"data-transition" => "pop", :"data-icon" => "gear"} Login

  %div{:"data-role" => "content"}
    %ul{:"data-role" => "listview"}
      - tickets.each do |ticket|
        %li
          %a{:href => "/ticket/#{ticket.id}", :"data-transition" => "flip", :"data-prefetch" => true}
            %img{:src => "data:image/png;base64,#{ticket.play_date.play.picture}"}
            %h3= ticket.play_date.play.title
            %p= ticket.play_date.full_date
